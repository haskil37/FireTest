<div id="avatar">
    <div class="wrapper">
        <div class="content">
            <ul>
                @if (ViewBag.New == false)
                {
                    <li>Поединков: @ViewBag.Battles</li>
                    <li>Побед: @ViewBag.BattlesWin</li>
                    <li>Правильных ответов: @(ViewBag.Correct)%</li>
                    <a href="/Manage/Index"><li>Настройки</li></a>
                }
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                { 
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()"><li>Выйти</li></a>
                }
            </ul>
        </div>
        <div class="parent">
            <img src="@ViewBag.Avatar" /><h3>@ViewBag.Name</h3>
        </div>
    </div>
</div>
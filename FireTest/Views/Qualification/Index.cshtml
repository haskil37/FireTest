@{
    ViewBag.Title = "Тест по квалификации - \"" + ViewBag.QualificationName + "\"";
}
@using (Html.BeginForm("Index", "Qualification", new { id = ViewBag.Id }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    if (ViewBag.Сompleted == true)
    {
        <div class="row center"><h3>По данной квалификации в базе @ViewBag.Count вопросов.</h3></div>
        <div class="row center"><h3>Выберите количество вопросов</h3></div>
        <div class="row center">
            @if (ViewBag.CountMax == 0)
            {
                <input type="range" min="1" max="10" id="count" name="count" oninput="countQ()" value="1">
            }
            else
            {
                <input type="range" min="1" max="@ViewBag.CountMax" id="count" name="count" oninput="countQ()" value="1">
            }
        </div>
        <div class="row center">
            <h4 id="countText">10</h4>
            <script>
                function countQ() {
                    var count = 10 * document.getElementById("count").value;
                    if (count > @ViewBag.Count && @ViewBag.CountMax != 0){
                        document.getElementById('countText').innerHTML = @ViewBag.Count;
                    }
                    else{
                        document.getElementById('countText').innerHTML = count;
                    }
                }
            </script>
        </div>
        <div class="row center"><h3>Вы хотите начать тестирование?</h3></div>
    }
    else
    {
        @Html.Hidden("EndId", (int)ViewBag.EndId)
        @Html.Hidden("EndCourse", (int)ViewBag.EndCourse)
      <div class="row"><h3>У Вас есть незаконченный тест по квалификации "@ViewBag.QualificationName"</h3></div>
        <div class="row"><h3>Хотите продолжить?</h3></div>
    }
    <div class="row center">
        <button type="submit" value="Accept" name="submitButton" class="button">Да</button>
    </div>
    <div class="row center">
        <button type="submit" value="Cancel" name="submitButton" class="button-Cancel">Нет</button>
    </div>
}
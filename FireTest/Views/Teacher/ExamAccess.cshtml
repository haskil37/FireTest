@{
    ViewBag.Title = "Доступ к экзамену";
}
@Styles.Render("~/Content/administrator")
@using (Ajax.BeginForm("ExamAccessAjax", new AjaxOptions
{
    HttpMethod = "Get",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "Users",
}))
{
    <div class="row">
        <div class="textback center"><h3>Выберите каким студентам открыть доступ к экзамену</h3></div>
    </div>
    <div class="row">
        <div class="col-1">
            <h3>Поиск</h3>
        </div>
        <div class="col-3">
            <span class="search"></span><input id="SearchString" name="SearchString" type="text" value="@ViewBag.CurrentFilter" />
        </div>
    </div>
}
<div id="Users">
    @{ Html.RenderAction("ExamAccessAjax", new { Page = 1 }); }
</div>
@section scripts
{
    <script>
    $('#SearchString').keyup(function () {
        $(this.form).submit();
    });
    </script>
}
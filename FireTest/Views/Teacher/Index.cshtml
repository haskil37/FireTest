@model IEnumerable < FireTest.Models.TeacherTest >
@{
    ViewBag.Title = "Преподавательская";
}
@Styles.Render("~/Content/administrator")
<div class="row">
    <div class="col-4">
        <a href="CreateTest" class="button">Создать тест по дисциплине</a>
    </div>
</div>
<br />
<div class="row" id="Tests">
    Тут какой-то текст хотели
    <table>
        <tr>
            <th>
                Созданные тестирования:
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @Html.DisplayFor(modelItem => item.NameTest)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "button-Cancel" }) |
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }, new { @class = "button-Cancel" }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "button-Cancel" })
                </td>
            </tr>
        }
    </table>
</div>

@model FireTest.Models.Question
@{
    ViewBag.Title = "Удалить вопрос";
}
<div class="row">
    <h3>Действительно хотите удалить вопрос:</h3>
    <h3>@Model.QuestionText</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row center">
        <input type="submit" value="Удалить" class="button" />
    </div>
    <div class="row center">
        @Html.ActionLink("На главную", "Index", null, new { @class = "button-Cancel" })
    </div>
}
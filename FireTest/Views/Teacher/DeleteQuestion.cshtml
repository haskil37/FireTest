@model FireTest.Models.Question
@{
    ViewBag.Title = "Удалить вопрос";
}
@if (ViewBag.DoNotDelete == "")
{
    <div class="row">
        <h3>Действительно хотите удалить вопрос:</h3>
        <h3>@Model.QuestionText</h3>
    </div>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row center">
            <input type="submit" value="Удалить" class="button" name="Action" />
        </div>
        <div class="row center">
            @Html.ActionLink("Назад", "Index", null, new { @class = "button-Cancel" })
        </div>
    }
}
else
{
    <div class="row">
        <h3>Этот вопрос удалить нельзя. Он используется:</h3>
        <h3>@Html.Raw(ViewBag.DoNotDelete.Replace("\n", "</br>"))</h3>
    </div>
}
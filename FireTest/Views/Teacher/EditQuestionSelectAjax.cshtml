@model PagedList.IPagedList<FireTest.Models.SubjectsAndQualification>
@using PagedList.Mvc;
@using (Ajax.BeginForm("EditQuestionSelectAjax", new AjaxOptions
{
    HttpMethod = "Get",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "Questions",
}))
{
    <div class="row">
        <div class="col-2">Дисциплина</div>
        <div class="col-10">
            @Html.DropDownList("Subjects", ViewBag.Subjects as SelectList, new { @onchange = "$(this.form).submit();" })
        </div>
    </div>
    <div class="row">
        <div class="col-2">Название раздела</div>
        <div class="col-10">
            @Html.DropDownList("Tags", ViewBag.Tags as SelectList, new { @onchange = "$(this.form).submit();" })
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <h3>Поиск</h3>
        </div>
        <div class="col-3">
            <span class="search"></span><input id="SearchString" name="SearchString" type="text" value="@ViewBag.CurrentFilter" />
        </div>
    </div>
    <div>
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("EditQuestionSelectAjax",
            new { page, currentFilter = ViewBag.CurrentFilter, Tags = Session["Tags"], Subjects = Session["Subjects"] }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "Questions" }))
    </div>
    <div class="row" id="question">
        <table>
            <tr>
                <th>
                    Вопросы
                </th>
                <th>
                </th>
                @if (ViewBag.Access == true)
                {
                    <th>
                    </th>
                }
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td class="center" width="15%">
                        <a href="EditQuestion/@item.Id">Редактировать</a>
                    </td>
                    @if (ViewBag.Access == true)
                    {
                        if (item.Qualification != 0)
                        {
                            <td class="center" width="15%">
                                Квалификация: <span class="qualification-color">@item.QualificationName</span>
                                <hr />
                                <a href="QuestionQualification/@item.Id">Убрать</a>
                            </td>
                        }
                        else
                        {
                            <td class="center" width="15%">
                                Квалификация: <span class="qualification-color">нет</span>
                                <hr />
                                <a href="QuestionQualification/@item.Id">Добавить</a>
                            </td>
                        }
                    }
                </tr>
            }
        </table>
    </div>
    <div>
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("EditQuestionSelectAjax",
            new { page, currentFilter = ViewBag.CurrentFilter, Tags = Session["Tags"], Subjects = Session["Subjects"] }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "Questions" }))
    </div>
    <script>
        MathJax.Hub.Queue(['Typeset', MathJax.Hub, 'question']);
        (function ($) {
            $.fn.setCursorToTextEnd = function () {
                var $initialVal = this.val();
                this.val($initialVal);
        };
        })(jQuery);
        $('#SearchString').focus();
        $('#SearchString').setCursorToTextEnd();
        $('#SearchString').keyup(function () {
            $(this.form).submit();
        });
    </script>
}
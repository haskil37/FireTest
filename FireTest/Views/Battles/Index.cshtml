@model IEnumerable<FireTest.Models.UsersData>
@{
    ViewBag.Title = "Пользователи";
}
@Styles.Render("~/Content/battle")
@Styles.Render("~/Content/audio")
<div class="music">
    <span id="play-button" onclick="Audio_Stop()" class="pause"></span>
    <span id="volume-button" class="volume" onclick="Volume_Off()"></span>
    <input type="range" min="0" max="10" id="volume" oninput="Audio_Volume()" value="5" />
    <audio id="audio" preload="auto" src="~/Content/select.mp3" loop="loop" autoplay="autoplay" />
</div>
<div class="row center">
    <img src="~/Content/battle.png" class="battleIndexPeople"/>
    <img src="~/Content/Fire.png" class="battleIndexFire"/>
</div>

<div class="row main-header-users">
    <div class="textback center"><h3>Выберите соперника</h3></div>
</div>
<div id="users">
    <div id="loadingIndicator">
        <div class="container">
            <div class="red flame"></div>
            <div class="orange flame"></div>
            <div class="yellow flame"></div>
            <div class="white flame"></div>
            <div class="blue circle"></div>
            <div class="black circle"></div>
        </div>
        <h3 class="center">Загрузка</h3>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/audio")
    <script>
        UserRefreshInterval = setInterval(function () { $('#users').load('/Battles/Users/'); }, 3000);
    </script>
}
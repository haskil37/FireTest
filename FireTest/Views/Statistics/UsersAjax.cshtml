@model PagedList.IPagedList<FireTest.Models.UsersForAdmin>
@using PagedList.Mvc;
@using (Ajax.BeginForm("UsersAjax", new AjaxOptions
{
    HttpMethod = "Get",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "Users",
}))
{
    <div class="row">
        <div class="col-4">Группа</div>
        <div class="col-8">
            @Html.DropDownList("Group", ViewBag.Group as SelectList, new { @onchange = "$(this.form).submit();" })
        </div>
    </div>
    <div class="row">
        <h3>Поиск<span class="search"></span><input id="SearchString" name="SearchString" type="text" value="@ViewBag.CurrentFilter"></h3>
    </div>
    <div class="row">
        <table>
            <tr>
                <th>
                    Студент
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td class="center" width="15%">
                        <a href="UsersStatistics/@item.Id">Просмотреть статистику</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("UsersAjax",
            new { page, currentFilter = ViewBag.CurrentFilter, Group = Session["Group"] }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "Users" }))
    </div>
    <script>
    (function ($) {
        $.fn.setCursorToTextEnd = function () {
            var $initialVal = this.val();
            this.val($initialVal);
    };
    })(jQuery);
    $('#SearchString').focus();
    $('#SearchString').setCursorToTextEnd();
    $('#SearchString').keyup(function () {
        $(this.form).submit();
    });
    </script>
}
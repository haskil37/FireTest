<script>
    var config = {
        type: 'pie',
        data: {
            datasets: [{
                data: [@ViewBag.Answers, @ViewBag.AnswersCorrect],
                backgroundColor: [
                    "#ff7300",
                    "#70bee6",
                ],
            }],
            labels: [
                "Неправильные ответы",
                "Правильные ответы",
            ]
        },
        options: {
            responsive: true,
            legend: {
                labels: {
                    fontSize: 20,
                    fontColor: "#c4bd97"
                }
            },
            animation: {
                animateRotate: false
            }
        }
    };
    var ctx = document.getElementById("chart");
    var myPieChart = new Chart(ctx, config);
</script>
<div class="row">
    <canvas id="chart" />
</div>
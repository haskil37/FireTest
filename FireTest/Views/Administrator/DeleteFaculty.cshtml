@model FireTest.Models.FacultyView
@{
    ViewBag.Title = "Удалить факультет";
}
<div class="row">
    <h3>Действительно хотите удалить факультет:</h3>
    <h3>@Model.Name</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row center">
        <input type="submit" value="Удалить" class="button" />
    </div>
    <div class="row center">
        @Html.ActionLink("Назад", "Faculties", null, new { @class = "button-Cancel" })
    </div>
}
@{
    ViewBag.Title = "Пользователи";
}
@Styles.Render("~/Content/administrator")
@using (Ajax.BeginForm("SelectTeacherAjax", new AjaxOptions
{
    HttpMethod = "Get",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "Users",
}))
{
    <div class="row">
        <h3>Поиск<span class="search"></span><input id="SearchString" name="SearchString" type="text"></h3>
    </div>
}
<div id="Users">
    @{ Html.RenderAction("SelectTeacherAjax", new { Page = 1 }); }
</div>
@section scripts
{
    <script>
    $('#SearchString').keyup(function () {
        $(this.form).submit();
    });
    </script>
}
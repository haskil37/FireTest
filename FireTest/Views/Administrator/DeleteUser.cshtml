@{
    ViewBag.Title = "Удалить пользователя";
}
<div class="row">
    <h3>Действительно хотите удалить пользователя:</h3>
    <h3>@ViewBag.User</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row center">
        <input type="submit" value="Удалить" class="button" />
    </div>
    <div class="row center">
        @Html.ActionLink("Назад", "Users", null, new { @class = "button-Cancel" })
    </div>
}
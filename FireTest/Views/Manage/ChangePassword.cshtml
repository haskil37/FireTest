@model FireTest.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Смена пароля";
}
@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Смена пароля</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-2 control-label" })
        <div class="col-10">
            @Html.PasswordFor(m => m.OldPassword)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-2 control-label" })
        <div class="col-10">
            @Html.PasswordFor(m => m.NewPassword)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-2 control-label" })
        <div class="col-10">
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="row col-offset-2 col-10">
        <input type="submit" class="button" value="Сменить пароль" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}